
<div class="center jumbotron">
  <% if logged_in? %>
    <div class="row">
      <div class="col-sm-12">
        <%= link_to image_tag("rsz_header.png", alt: "e-learning"),
          home_path %>
      </div>
      <div class="col-sm-6">
        <%= link_to image_tag("rsz_2word.jpg", alt: "List words"),
          listword_path %>
        <div class="">
          <span>
            <%= link_to t(".word"), listword_path,
              class:"btn btn-primary btn-sm btn-course" %>
          </span>
        </div>
      </div>
      <div class="col-sm-6">
        <%= link_to image_tag("rsz_lesson.jpg", alt: "Start lesson"),
          choose_category_path %>
