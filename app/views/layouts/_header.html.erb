<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to image_tag("rsz_1elearning.png", alt: "Rails logo"),
      home_path, class: "logo"%>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path, class: "header123" %></li>
        
        <% if logged_in? %>
          <% if current_user.admin %>
            <li><%= link_to t("manage"), admin_path,
              class: "header123" %></li>
          <% else %>
            <li><%= link_to t("user_list"), users_path,
              class: "header123" %></li>
            <li><a class="glyphicon glyphicon-bell">1</a></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= @current_user[:name] %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), profile_path %></li>
              <li><%= link_to t("setting"), edit_path %></li> 
              <li class="divider"></li>
              <li>
                <%= link_to t("logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("signup"), signup_path %></li>
          <li><%= link_to t("login"), login_path, class:"header123"%></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
