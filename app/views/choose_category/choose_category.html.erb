<h1><%= t ".choose_lesson" %></h1>
<%= render "progress" %>
<div class="cssmenu">
  <ul>
    <li class="active">
      <%= link_to "#" do %>
        <span><%= t ".all_category" %></span>
      <% end %>
    </li>
    <% @categories.each do |category| %>
      <li class="has-sub">
        <%= link_to "#" do %>
          <span><%= category.name %></span>
        <% end %>
        <ul>
          <% category.courses.each do |course| %>
            <li class="has-sub">
              <%= link_to "#" do %>
                <span><%= course.name %></span>
              <% end %>
              <ul>
                <% course.lessons.each do |lesson| %>
                  <li>
                    <%= link_to "lesson_logs/#{lesson.id}",
                      method: :post do %>
                      <span><%= lesson.name %></span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
<div style="clear:both"></div>
